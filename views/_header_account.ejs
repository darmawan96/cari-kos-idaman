<% if (typeof username === 'undefined') { %>

<li>
    <a href="/login">
        <i class="glyphicon glyphicon-user"></i>
        Login
    </a>
</li>

<% } else { %>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <i class="glyphicon glyphicon-user"></i><%=username%>
    </a>
    <ul class="dropdown-menu">
        <li style="width:100%;">
            <a style="color:black;" href="/profile">Profile</a>
        </li>

<%if (role == 'seller' || role == 'admin'){%>
            <li style="width:100%;">
                <a style="color:black;" href="/addNewHouse">Add New House</a>
            </li>
<%}%>
        <li style="width:100%;" role="separator" class="divider"></li>
        <li style="width:100%;"><a style="color:black;" href="/logout">Logout</a></li>
    </ul>
</li>
<% } %>